<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.css' />
    <style>
      .container{
        width: 1000px;
      }
    </style>
  </head>
  <body>
    <%- include("header.ejs",{"title":title,isshow:true,showlogin:false,showuser:false,showlogout:true,topro:false}) %>
    <div class="container">
      <%if(!update){%>
      <form method="post" action="/article" enctype="multipart/form-data">
          <div class="form-group">
            <label for="exampleInputEmail1">标题</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="title" placeholder="title"  >
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">内容</label>
            <textarea class="form-control" rows="5" name="content"></textarea>
          </div>
         <div class="form-group">
            <label for="exampleInputPassword1">上传文件</label>
            <input type="file" name="photo">
          </div>
          <button type="submit" class="btn btn-default">发表</button>
          
          <a href="/">回到首页</a>

        </form>
      <%}else{%>
      <form method="post" action="/article/update" enctype="multipart/form-data">
          <div class="form-group">
            <label for="exampleInputEmail1">标题</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="title" placeholder="title" value="<%=articleInfo.title %>"
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">内容</label>
            <textarea class="form-control" rows="5" name="content"><%=articleInfo.content %>
            </textarea>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">上传文件</label>
            <input type="file" name="photo">
          </div>
         <input type="hidden" value="<%=articleInfo._id%>" name="articleId">
          <button type="submit" class="btn btn-default">更新</button>
          
          <a href="/">回到首页</a>

                 </form>
        <%}%>

    </div>
   
	
    <script src="bootstrap/js/jquery-1.11.0.js"></script>
    <script src="bootstrap/js/bootstrap.js"></script>
  </body>
</html>
